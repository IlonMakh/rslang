{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "prettier",
        "airbnb-base",
        "airbnb-typescript/base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": ["tsconfig.json"]
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "linebreak-style": ["error", "windows"],
        "no-console": "off",
        "class-methods-use-this": ["error", { "exceptMethods": ["createHeader", "createFooter", "createProjectSection", "createAdvantagesSection", "createAboutAppSection", "createDevelopersSection"] }],
        "max-len": ["error", { "code": 100, "ignoreTemplateLiterals": true, "ignoreStrings": true, "ignoreComments": true }]
    }
}